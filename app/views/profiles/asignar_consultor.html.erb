<div class="row text-center">
	<h1><%=@user.fullName%></h1>
	<hr class="divider">
	<div class="col-lg-4"></div>
	<div class="col-lg-4">
	<%= form_tag("/update_asignar_consultor/"+@user.id.to_s, method:"post",:multipart => true) do %>
		<div class="form-group">
	      <%= label_tag "Capítulo" %>
	      <%= select_tag(:chapter_id, options_from_collection_for_select(@opciones_capitulo,'id', 'chapter_name'), class: "form-control",:prompt => "Seleccionar capitulo") %>
	   </div>

	   <small>Solo se acepta ZIP</small>
	   <div class="form-group">
	       <div class="form-group">
		    <%= file_field_tag :image %>
		  </div>
	   </div>

	   <div class="form-group">
        <%= label_tag "Fecha" %>
        <%= date_field :date_of, class: "form-control" %>
       </div>

	    <div class="actions">
	      <%= submit_tag "Volver consultor al usuario", class: "btn btn-success" %>
	      <%= link_to "Atrás", '/profile/'+@user.id.to_s, class: "btn btn-danger" %>
	    </div>
	<%end%>
    </div>
</div>
