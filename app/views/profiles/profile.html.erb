                 <% @user.degrees.each do |degree| %>
                  <% if degree.aproved %>
                 <% if degree.title!="Iniciatico"%>
                  <%= link_to degree.title.to_s + " en " + degree.chapter.chapter_name.to_s,degree.image.url, target: "_blank" , class: "btn btn-primary btn-block"%>
