        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title">Transferir a <%=@user.fullName%></h4>
      </div>
      <div class="modal-body">
        <%= form_tag('/transfer_user', :method => :post) do %>
          <label>Campamento</label>
          <input type="hidden" name="id" value="<%= @user.id %>">
          <%= select_tag(:campament_id, options_from_collection_for_select(Campament.all, 'id', 'name'), class: "form-control", :prompt => "Seleccionar filtro") %><br>
          <label>Capítulo</label>
          <%= select_tag(:chapter_id, options_from_collection_for_select(Chapter.all, 'id', 'chapter_name'), class: "form-control", :prompt => "Seleccionar filtro") %><br>
          <%= submit_tag("Transeferir", class: "btn-block btn btn-primary") %>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
