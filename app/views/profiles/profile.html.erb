<div class="container">
  <div class="jumbotron">
    <h1 class="center-title">Perfil de <%= @user.fullName %></h1>
    <div class="col-lg-3">
      <img src="/assets/user.png" class="img-responsive">
    </div>
    <strong>Demolay ID:</strong>
    <%= @user.demolayID %><br><br>
    <strong>Rol:</strong>
    <%= @user.role %><br><br>
    <strong>Carnet de Identidad:</strong>
    <%= @user.ci %><br><br>
    <strong>Grados</strong>
    <% @user.charges.each do |charge| %>
      <%= charge.title %><br>
    <% end %>
    <br>
    <% if @user.role == "Demolay" %>
      <%= link_to "Asignar Maestro Consejero", {:controller => "profiles", :action => "asignar_maestro_consejero", :id => @user.id} %>
      <%= link_to "Asignar Ilustre Comendador Caballero", {:controller => "profiles", :action => "asignar_comendador", :id => @user.id} %>
      <%= link_to "Asignar Chevallier", {:controller => "profiles", :action => "asignar_chevallier", :id => @user.id} %>
    <% end %>
    <br><br><br><br>
  </div>
</div>
