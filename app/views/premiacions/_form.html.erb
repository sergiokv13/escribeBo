<%= bootstrap_form_for @premiacion do |f| %>
  <div class="form-group">
    <%= f.text_field :title ,class:"form-control", label: "Título", placeholder: "Ingresa el título" %>
  </div>
  <div class="form-group">
    <%= f.date_field :date_of , class: "form-control", label: "Fecha" %>
  </div>
  <div class="actions">
    <%= f.submit "Premiar", class: "btn btn-success" %>
  </div>
<% end %>

<script type="text/javascript">
  $(function(){
      if (!Modernizr.inputtypes.date) {
          $('input[type=date]').datepicker({
                dateFormat : 'mm-dd-yy',
                yearRange: '1950:2017',
                changeYear: true
              }
           );
      }
  });
</script>
