<%= bootstrap_form_for @transaction, html: { multipart: true } do |f| %>
  <div class="form-group">
    <%= f.text_field :name , :label => "Nombre de transacción", placeholder: "Ingresa el nombre de la transacción" %>
  </div>

  <% if current_user.is_oficial %>
    <div class="form-group">
      <%= f.select :transaction_type, options_for_select([['Ingreso', 'Ingreso'], ['Egreso', 'Egreso']]), :label => "Tipo de transacción" %>
    </div>
  <% else %>
    <div class="form-group">
      <%= f.select :transaction_type, options_for_select(['Ingreso', 'Ingreso']), :label => "Tipo de transacción" %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.select :concept_type, options_for_select([['Iniciación','Iniciación'],['Elevación','Elevación'],['Investidura','Investidura'],['Investidura Chevalier','Investidura Chevalier'],['DeMolay Card','DeMolay Card'],['Consultor','Consultor'],['Premiación','Premiación'],['Otro','Otro']]), :label => "Concepto"  %>
  </div>

  <div class="form-group">
    <%= f.select :chapter_id, options_for_select(@chapters), :label => "Entidad"  %>
  </div>

  <div class="form-group">
    <%= f.text_area :description , :label => "Descripción", placeholder: "Ingresa la descripción de la transacción, no olvide ningun detalle relevante" %>
  </div>

  <div class="form-group">
    <%= f.number_field :float_amount , :label => "Monto (en Bs.)", placeholder: "Ingresa el monto total", step: :any %>
  </div>

  <div class="form-group">
    <%= f.file_field :image , :label => "Comprobante en imagen"%>
  </div>


  <div class="form-group">
    <%= f.file_field :plantilla , :label => "Plantilla en excel (No es necesario en Premiaciones y Otros)."%>
  </div>


  <div class="form-group">
    <%= f.text_field :receipt_number , :label => "Numero de Comprobante", placeholder: "Asegurate de no ingresarlo incorrectamente" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar", class: "btn btn-success" %>
    <%= link_to 'Atrás', :back, class: "btn btn-danger" %>
  </div>
<% end %>
