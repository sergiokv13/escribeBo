
        <h1 class="center-title">Reportes desde <%= @start %> hasta <%= @end %></h1>
        <div class="table-responsive">
          <table class="table table-bordered table-hover">
            <thead>
              <th>
                Nombre
              </th>
              <th>
                Ente
              </th>
              <th>
                Descripcion
              </th>
              <th>
                Tipo
              </th>
              <th>
                Monto
              </th>
            </thead>
            <tbody>
              <% @transactions.each do |transaction| %>
                <tr>
                  <td>
                    <%= link_to transaction.name, transaction_path(transaction) %>
                  </td>
                  <td>
                     <% if !transaction.chapter.nil? %>
                      <a href="/chapters/<%=transaction.chapter_id%>"> <%= transaction.chapter.chapter_name %> </a>
                    <% else %>
                      No se registro el Ente.
                    <% end %>
                  </td>
                  <td>
                    <%= transaction.description %>
                  </td>
                  <td>
                    <%= transaction.transaction_type %>
                  </td>
                  <td>
                    Bs. <%= transaction.float_amount || transaction.mount %>
                  </td>
                </tr>
              <% end %>
              <tr>
                <td colspan="3">
                  Total
                </td>
                <td>
                  Bs. <%= @total %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
