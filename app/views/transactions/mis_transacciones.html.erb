
        <h1>Transacciones realizadas por mi</h1>

        <div class="table-responsive">
          <table class="table table-hover table-bordered table-striped">
            <thead>
              <tr>
                <td>Tipo</td>
                <th>Nombre</th>
                <th>Ente</th>
                <th>Descripci√≥n</th>
                <th>Monto</th>
                <th>Estado</th>
             
              </tr>
            </thead>

            <tbody>
              <% @transactions.each do |transaction| %>
                <tr>
                  <td><%= transaction.transaction_type %></td>
                  <td><%= transaction.name %></td>
                  <td>
                    <% if !transaction.chapter.nil? %>
                      <a href="/chapters/<%=transaction.chapter_id%>"> <%= transaction.chapter.chapter_name %> </a>
                    <% else %>
                      No se registro el Ente.
                    <% end %>
                  </td>
                  <td><%= transaction.description %></td>
                  <td>Bs. <%= transaction.float_amount || transaction.mount %></td>
                  <td><%= transaction.status %></td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <br>
      </div>

      <center>
          <div class="apple_pagination">
            <%= will_paginate @transactions, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
          </div>
      </center>