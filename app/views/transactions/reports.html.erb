<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1 class="center-title">Reportes</h1>
        <%= form_tag("/generateReport", method:"post") do %>
          <div class="form-group">
            <%= label_tag "Desde" %>
            <%= date_field_tag(:start, Date.today, class: "form-control") %>
          </div>
          <div class="form-group">
            <%= label_tag "Hasta" %>
            <%= date_field_tag(:end, Date.today, class: "form-control") %>
          </div>
          <%= submit_tag "Generar", class: "btn btn-default" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
