
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1>Reportes</h1>
        <h2>Usuarios</h2>
        <%= bootstrap_form_tag url: "/users_reports", method: "get" do |f| %>
          <div class="form-group">
            <%= f.number_field :start_age, label: "Edad Inicial", value: 13 %>
            <%= f.number_field :end_age, label: "Edad Final", value: 21 %>
          </div>
          <div class="form-group">
            <%= f.check_box :active_users, label: "Usuarios habilitados" %>
            <%= f.check_box :inactive_users, label: "Usuarios inhabilitados" %>
            <%= f.check_box :demolays, label: "Demolays" %>
            <%= f.check_box :no_demolays, label: "No Demolays" %>
            <%= f.check_box :new_demolays, label: "Iniciaticos" %>
            <%= f.check_box :knights, label: "Caballeros" %>
            <%= f.check_box :chevaliers, label: "Chevaliers" %>
            <%= f.check_box :consultants, label: "Consultores" %>
            <%= f.check_box :master, label: "Maestro Consejero" %>
            <%= f.check_box :presidente_consejo, label: "Presidente de Consejo Consultivo" %>
          </div>
          <div class="actions">
            <%= f.submit "Generar Excel", class: "btn btn-info" %>
          </div>
        <% end %>
        <h2>Transacciones</h2>
        <%= bootstrap_form_tag url: "/transactions_reports", method: "get" do |f| %>
          <div class="form-group">
            <%= f.date_field :start_date, label: "Desde" %>
            <%= f.date_field :end_date, label: "Hasta" %>
          </div>
          <div class="form-group">
            <%= f.check_box :incomes, label: "Ingresos" %>
            <%= f.check_box :outcomes, label: "Egresos" %>
          </div>
          <div class="form-group">
            <%= f.select :campament_id, options_for_select(Campament.all.map{ |c| [c.name, c.id] }) %>
          </div>
          <div class="form-group">
            <%= f.select :chapter_id, options_for_select(Chapter.all.map{ |c| [c.chapter_name, c.id] }) %>
          </div>
          <div>
            <%= f.select(:concept, options_for_select(@concepts), class: "form-control",label: "Por concepto")%>
          </div>
          <div class="actions">
            <%= f.submit "Generar Excel", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

