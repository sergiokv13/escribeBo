<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="jumbotron">
        <h1>Reportes</h1>
        <h2>Usuarios</h2>
        <%= bootstrap_form_tag url: "/users_reports", method: "get" do |f| %>
          <div class="form-group">
            <%= f.number_field :star_age, label: "Desde" %>
            <%= f.number_field :end_age, label: "Hasta" %>
          </div>
          <div class="form-group">
            <%= f.check_box :active_users, label: "Usuarios activos" %>
            <%= f.check_box :inactive_users, label: "Usuarios inactivos" %>
          </div>
          <div class="actions">
            <%= f.submit "Generar Excel", class: "btn btn-info" %>
          </div>
        <% end %>
        <h2>Transacciones</h2>
        <%= bootstrap_form_tag url: "/transactions_reports", method: "get" do |f| %>
          <div class="form-group">
            <%= f.date_field :star_date, label: "Desde" %>
            <%= f.date_field :end_date, label: "Hasta" %>
          </div>
          <div class="form-group">
            <%= f.check_box :incomes, label: "Ingresos" %>
            <%= f.check_box :outcomes, label: "Egresos" %>
          </div>
          <div class="actions">
            <%= f.submit "Generar Excel", class: "btn btn-info" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
