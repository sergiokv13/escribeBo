<div class="container">
  <h1 class="center-title">Crear Usuario</h1>
  <div class="col-lg-2"></div>
  <div class="col-lg-8">
    <%= form_tag("/createUser",method:"post") do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :name %>
      <%= text_field_tag :name, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :lastname %>
      <%= text_field_tag :lastname, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :ci %>
      <%= text_field_tag :ci, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :campament %>
      <%= select_tag(:campament, options_for_select(@campaments), class: "form-control") %>
    </div>


    <div class="form-group">
      <%= label_tag :demolayID %>
      <%= text_field_tag :demolayID, nil, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= label_tag :chapter_id %>
      <%= select_tag(:chapter_id, options_from_collection_for_select(Chapter.where(:chapter_type => 'Capitulo'), 'id', 'chapter_name'), class: "form-control") %>
    </div>

    <div class="form-group">
      <%= label_tag :role %>

      <%if current_user.role == "Oficial Ejecutivo"%>
        <%= select_tag(:role, options_for_select(@paraOficialEjecutivo), class: "form-control") %>
      <%end%>

      <%if current_user.role == "Diputado"%>
        <%= select_tag(:role, options_for_select(@paraDiputado), class: "form-control") %>
      <%end%>

      <%if current_user.role == "Delegado Regional"%>
        <%= select_tag(:role, options_for_select(@paraDelegadoRegional), class: "form-control") %>
      <%end%>

      <%if current_user.role == "Presidente Consejo Consultivo"%>
        <%= select_tag(:role, options_for_select(@paraPresidenteConsejoConsultivo), class: "form-control") %>
      <%end%>

      <%if current_user.role == "Consultor" || current_user.charges.where(:title => "Maestro Consejero").size!=0 %>
        <%= select_tag(:role, options_for_select(@paraConsultor), class: "form-control") %>
      <%end%>


    </div>

    <div class="actions">
      <%= submit_tag "Crear", class: "btn btn-success" %>
      <%= link_to "AtrÃ¡s", '/users', class: "btn btn-danger" %>
    </div>

  <% end %>

  </div>
</div>
<br>
