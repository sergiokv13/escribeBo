<center>
<h2>Cambiar contraseña</h2>
<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, autofocus: true, autocomplete: "off" ,:label => "Nueva contraseña"%>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, autocomplete: "off", :label => "Confirmación de nueva contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Cambiar contraseña", :class => "btn btn-success" %>
  </div>
<% end %>
</center>