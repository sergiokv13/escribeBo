<div class="col-lg-12">
	<h2 class="center-title">Nueva publicación</h2>
  <%= bootstrap_form_tag url: "/chapter/createAnnouncement/"+@chapter.id.to_s,method:"post", :html => { :multipart => true } do %>
  	<div class="row">
			<div class="col-lg-12">
				<div class="row">
					<div class="col-lg-12">
						<div class="form-group">
				  		<%= label_tag "Título" %><br>
				  		<%= text_field_tag :subject, nil, class: "form-control" %>
						</div>
	  			</div>
				</div>

				<div class="row">
					<div class="col-lg-12">
		  			<div class="form-group">
					    <%= label_tag "Contenido" %><br>
					    <%= text_area_tag :content, nil, class: "form-control", rows: "7" %>
					  </div>
	  			</div>
				</div>

				<div class="row">
					<div class="col-lg-12">
		  			<div class="form-group">
					    <!-- Button trigger modal --><br>
							<button type="button" class="btn btn-primary btn-block" data-toggle="modal" data-target="#myModal">
							  Definir público
							</button>
					  </div>
	  			</div>
				</div>
			</div>

			<div class="col-lg-6">
				<div class="row">

					<!-- Modal -->
					<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
					  <div class="modal-dialog" role="document">
					    <div class="modal-content">
					      <div class="modal-header">
					        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					        <h4 class="modal-title" id="myModalLabel"><h3>Dirijido a:</h3></h4>
					      </div>
					      <div class="modal-body">
					      	<div class="col-lg-6">
					       	  <div class="form-group">
					       		   <%= label_tag 'grados_iniciatico', 'Iniciatico'%>
					       		   <%= check_box_tag 'degrees[degree][]', "Iniciatico",id:'grados_iniciatico'%><br/>

					       		  <%= label_tag 'grados_DeMolay', 'DeMolay'%>
					       		  <%= check_box_tag 'degrees[degree][]', "DeMolay", id:'grados_DeMolay'%><br/>

					       		  <%= label_tag 'grados_consultor', 'Consultor'%>
					       		  <%= check_box_tag 'degrees[degree][]', "Consultor", id:'grados_consultor'%><br/>

					       		  <%= label_tag 'grados_caballero', 'Caballero'%>
					       		  <%= check_box_tag 'degrees[degree][]', "Caballero", id:'grados_caballero'%><br/>

					       		  <%= label_tag 'grados_chevalier', 'Chevalier'%>
					       		  <%= check_box_tag 'degrees[degree][]', "Chevalier", id:'grados_chevalier'%><br/>
					       	  </div>
									</div>
					       	<div class="col-lg-6">
					       	  <div class="form-group">
					       		   <%= label_tag 'cargos_Maestro_consejero', 'Maestro Consejero'%>
					       		   <%= check_box_tag 'charges[charge][]', "Maestro Consejero",id:'cargos_Maestro_consejero'%><br/>

					       		   <%= label_tag 'cargos_Ilustre_Comendador_Caballero', 'Ilustre Comendador Caballero'%>
					       		   <%= check_box_tag 'charges[charge][]', "Ilustre Comendador Caballero",id:'cargos_Ilustre_Comendador_Caballero'%><br/>

					       		    <%= label_tag 'cargos_Gran_Comendador_Chevalier', 'Gran Comendador Chevalier'%>
					       		   <%= check_box_tag 'charges[charge][]', "Gran Comendador Chevalier",id:'cargos_Gran_Comendador_Chevalier'%><br/>

					       		  <%= label_tag 'cargos_Presidente_Consejo_Consultivo', 'Presidente Consejo Consultivo'%>
					       		  <%= check_box_tag 'charges[charge][]', "Presidente Consejo'Consultivo", id:'cargos_Presidente_Consejo_Consultivo'%><br/>

					       		  <%= label_tag 'cargos_Delegado_Regional', 'Delegado Regional'%>
					       		  <%= check_box_tag 'charges[charge][]', "Delegado Regional", id:'cargos_Delegado_Regional'%><br/>

					       	  </div>
					       	</div>
					      </div>
					      <div class="modal-footer">
					        <button type="button" class="btn btn-success" data-dismiss="modal">Seleccionar</button>
					      </div>
					    </div>
					  </div>
					</div>

				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-lg-6">
				<div class="form-group">
			    <%= label_tag :image %><br>
			    <%= file_field_tag :image, class: "form-control" %>
			  </div>
			</div>
			<div class="col-lg-6">
				<div class="form-group" onmouseover="checkFields()">
					<br>
			    <%= submit_tag "Publicar", class: "form-control btn btn-success fix", id: "boton" %>
			  </div>
			</div>
		</div>

	<% end %>
</div>

<script type="text/javascript">
	function checkFields() {
		if ($('#subject').val().length == 0 || $('#content').val().length == 0){
			$('#boton').attr('disabled', 'disabled');
			$('#boton').attr('value', 'Todos los campos son obligatorios');
			$('#boton').removeClass( "btn-success" ).addClass( "btn-danger" );
		}
		if ($('#subject').val().length > 0 && $('#content').val().length > 0){
			$('#boton').attr('value', 'Publicar');
			$('#boton').removeClass( "btn-danger" ).addClass( "btn-success" );
			$('#boton').removeAttr('disabled');
		}
	}
</script>
