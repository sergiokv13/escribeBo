<%= form_for(@inbox) do |f| %>
  <% if @inbox.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@inbox.errors.count, "error") %> prohibited this inbox from being saved:</h2>

      <ul>
      <% @inbox.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :subject %><br>
    <%= f.text_area :subject %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_field :content %>
  </div>
  <div class="field">
    <%= f.label :user2_id %><br>
    <% if @user_id != 0%>
      <%= f.text_field :user2_id, :value => @user_id, :id => 'user_id'%>
    <%else%>
      <%= f.text_field :user2_id,  :id => 'user_id'%>
    <%end%>
    usuario:
    <div id="user_field">nombre aca</div> 
    
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">

  jQuery('#user_id').on('input', function() {
      update_user($('#user_id').val());
  });


  function update_user(user_field) {
    jQuery.ajax({
      url: "/update_user_field",
      type: "GET",
      data: {"user_field" : user_field},
      dataType: "html",
      success: function(data) {
        jQuery('#user_field').html(data);
      }
    });
  }
</script>
