
        <h1 class="center-title">Recibidos</h1>

        <div class="table-responsive">
          <table class="table table-hover table-striped table-bordered">
            <thead>
              <tr>
                <th>Título</th>
                <th>Recibido de</th>
                <th>Fecha</th>
                <th>Visto</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @inboxes.each do |inbox| %>
                <% if inbox.seen %>
                  <tr class="success">
                <% else %>
                  <tr class="danger">
                <% end %>
                  <td><%= inbox.subject %></td>
                  <% if inbox.user1 != nil %>
                    <td><%= link_to inbox.user1.fullName, '/profile/' + inbox.user1.id.to_s %></td>
                  <%else%>
                    <td>Usuario eliminado</td>
                  <% end %>
                  <td><%= inbox.created_at.to_date %></td>
                  <td><%= inbox.visto %></td>
                  <td><%= link_to 'Ver', inbox %></td>
                  <td><%= link_to 'Borrar', '/deleteInbox/' + inbox.id.to_s %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <div class="apple_pagination">
            <%= will_paginate @inboxes, :previous_label => 'Anterior', :next_label => 'Siguiente' %>
        </div>

