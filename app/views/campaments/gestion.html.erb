<div class="row text-center">
	<h1><%=@campament.name%></h1>
	<hr class="divider">
	<div class="col-lg-4"></div>
	<div class="col-lg-4">
		<%= form_tag("/campaments/update_gestion/"+@campament.id.to_s,method:"post") do %>
			
		<div class="form-group">
		<% if @campament.id != 1 %>
	    	<%= label_tag :Delegado_regional %>
	    	<%= select_tag(:id_delegado, options_from_collection_for_select(@posibles_delegados,'id', 'fullName'), class: "form-control",:prompt => "Seleccionar Delegado Regional") %>
	    <% end %>
	     
	   </div>
	   	<div class="form-group">
	   	<% if @campament.id == 1 %>
	       	<%= label_tag :maestro_consejero_nacional %>
	    <% else %>
	    	<%= label_tag :maestro_consejero_departamental %>
	    <% end %>
	      <%= select_tag(:id_maestro, options_from_collection_for_select(@posibles_maestros,'id', 'fullName'), class: "form-control",:prompt => "Seleccionar Maestro Consejero") %>
	   	</div>
	    <div class="actions">
	      <%= submit_tag "Actualizar gestión", class: "btn btn-success" %>
	      <%= link_to "Atrás", '/campaments', class: "btn btn-danger" %>
	    </div>
		<%end%>
  </div>
</div>
