<p id="notice"><%= notice %></p>

<h1>Listing Campaments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>President</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @campaments.each do |campament| %>
      <tr>
        <td><%= campament.name %></td>
        <% if campament.president!=nil%>
        <p>
          <td><%= campament.president.fullName %></td>
        </p>
          <%else%>
            <td>La gestion no fue actualizada</td>
        <%end%>       
        <td><%= link_to 'Show', campament %></td>
        <td><%= link_to 'Edit', edit_campament_path(campament) %></td>
        <td><%= link_to 'Gestion', "campaments/gestion/"+campament.id.to_s, class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', campament, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

